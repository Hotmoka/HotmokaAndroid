<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.state.InsertReferenceFragment">

    <Button
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:text="@string/dismiss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/words" />

    <TableLayout
        android:id="@+id/words"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@+id/dismiss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_name">

        <TableRow android:layout_width="0dp">

            <TextView
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/cancel" />

            <TextView
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/app_name" />

            <TextView
                android:gravity="center"
                android:padding="3dp"
                android:text="tu" />

            <TextView
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/app_name" />
        </TableRow>

        <TableRow android:layout_width="0dp">

            <TextView
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/app_name" />

            <TextView
                android:gravity="center"
                android:padding="3dp"
                android:text="io" />

            <TextView
                android:gravity="center"
                android:padding="3dp"
                android:text="tÃ¨" />

            <TextView
                android:gravity="center"
                android:padding="3dp"
                android:text="Urca!" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/account_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/new_account_name"
        app:layout_constraintBottom_toTopOf="@+id/account_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/words"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_name_label"
        tools:text="Juliette" />
</androidx.constraintlayout.widget.ConstraintLayout>