                    android:id="@+id/word5"
                    android:gravity="center"
                    android:hint="@string/word5"
                    android:padding="3dp" />

                <AutoCompleteTextView
                    android:id="@+id/word6"
                    android:gravity="center"
                    android:hint="@string/word6"
                    android:padding="3dp" />

                <AutoCompleteTextView
                    android:id="@+id/word7"
