                    android:padding="3dp" />
            </TableRow>

            <TableRow>

                <AutoCompleteTextView
                    android:id="@+id/word13"
                    android:gravity="center"
                    android:hint="@string/word13"
                    android:padding="3dp" />

                <AutoCompleteTextView
                    android:id="@+id/word14"
                    android:gravity="center"
