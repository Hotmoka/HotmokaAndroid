<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/import_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/import_account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/words" />

        <EditText
            android:id="@+id/account_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/account_name"
            android:inputType="text"
            android:minHeight="48dp"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/account_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/account_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="@string/account_password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/insert_words_description"
            app:layout_constraintEnd_toStartOf="@+id/hideShowAccountPassword"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_name" />

        <TableLayout
            android:id="@+id/words"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:stretchColumns="*"
            app:layout_constraintBottom_toTopOf="@+id/import_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/insert_words_description">

            <TableRow>

                <AutoCompleteTextView
                    android:id="@+id/word1"
                    android:gravity="center"
                    android:hint="@string/word1"
                    android:padding="3dp" />

                <AutoCompleteTextView
                    android:id="@+id/word2"
                    android:gravity="center"
                    android:hint="@string/word2"
                    android:padding="3dp" />

                <AutoCompleteTextView
                    android:id="@+id/word3"
                    android:gravity="center"
                    android:hint="@string/word3"
                    android:padding="3dp" />

                <AutoCompleteTextView
                    android:id="@+id/word4"
                    android:gravity="center"
                    android:hint="@string/word4"
                    android:padding="3dp" />
            </TableRow>

            <TableRow>

