                    android:padding="3dp" />

                <AutoCompleteTextView
                    android:id="@+id/word19"
                    android:gravity="center"
                    android:hint="@string/word19"
                    android:padding="3dp" />

                <AutoCompleteTextView
                    android:id="@+id/word20"
                    android:gravity="center"
                    android:hint="@string/word20"
